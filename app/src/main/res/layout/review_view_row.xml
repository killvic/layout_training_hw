<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="24dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="24dp">

    <ImageView
        android:id="@+id/ivReviewerAvatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/eclipse_for_avatars_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvReviewUserName"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:text="Name Surname"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@id/ivReviewerAvatar"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <TextView
        android:id="@+id/tvReviewDate"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:textSize="12sp"
        android:alpha="0.4"
        android:text="Month DDth, YEAR"
        app:layout_constraintStart_toEndOf="@+id/ivReviewerAvatar"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/tvReviewUserName"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:lineHeight="20sp"
        android:id="@+id/tvReviewText"
        android:text="&quot;Once you start to learn its secrets, there’s a wild and exciting variety of play here that’s unmatched, even by its peers.&quot;"
        android:textColor="#A8ADB7"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvReviewDate" />

</androidx.constraintlayout.widget.ConstraintLayout>