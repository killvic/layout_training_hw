<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#050B18">

    <ImageView
        android:id="@+id/ivBackgroundImage"
        android:layout_width="match_parent"
        android:layout_height="296dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="295dp"
        android:alpha="0.28"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/back_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></com.google.android.material.floatingactionbutton.FloatingActionButton>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="295dp"
        android:layout_marginTop="56dp"
        android:alpha="0.28"
        android:src="@drawable/menu_icon"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></com.google.android.material.floatingactionbutton.FloatingActionButton>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="212dp"
        android:layout_height="95dp"
        android:id="@+id/clGameIconAndRating"
        android:layout_marginStart="24dp"
        android:layout_marginTop="274dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@drawable/shape_for_game_icon_frame"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="84.13dp"
                android:layout_height="84.13dp"
                android:background="@drawable/shape_for_game_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivGameIcon"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="112dp"
            android:layout_height="46dp"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="34dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="26dp"
                android:id="@+id/tvGameName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="DoTA 2"
                android:textColor="#FFFFFF"
                android:textSize="20sp"/>

            <View
                android:id="@+id/star_1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvGameName"
                android:layout_marginTop="7dp"
                android:background="@drawable/star_rate"/>
            <View
                android:id="@+id/star_2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:layout_constraintStart_toEndOf="@+id/star_1"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toBottomOf="@+id/tvGameName"
                android:layout_marginTop="7dp"
                android:background="@drawable/star_rate"/>
            <View
                android:id="@+id/star_3"
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:layout_constraintStart_toEndOf="@+id/star_2"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toBottomOf="@+id/tvGameName"
                android:layout_marginTop="7dp"
                android:background="@drawable/star_rate"/>
            <View
                android:id="@+id/star_4"
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:layout_constraintStart_toEndOf="@+id/star_3"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toBottomOf="@+id/tvGameName"
                android:layout_marginTop="7dp"
                android:background="@drawable/star_rate"/>
            <View
                android:id="@+id/star_5"
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:layout_constraintStart_toEndOf="@+id/star_4"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toBottomOf="@+id/tvGameName"
                android:layout_marginTop="7dp"
                android:background="@drawable/star_rate"/>

            <TextView
                android:layout_width="26dp"
                android:layout_height="14dp"
                android:text="70M"
                android:textSize="12sp"
                android:textColor="#45454D"
                app:layout_constraintStart_toEndOf="@+id/star_5"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="32dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:id="@+id/rvTags"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clGameIconAndRating"
        tools:listitem="@layout/tags_view_row"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDescription"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:maxLines="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvTags"
        android:textSize="12sp"
        android:lineHeight="19sp"
        android:textColor="#EEF2FB"
        android:alpha="0.7"
        android:text="Dota 2 is a multiplayer online battle arena (MOBA) game which has two teams of five players compete to collectively destroy a large structure defended by the opposing team known as the &quot;Ancients&quot;, whilst defending their own."/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clRating"
        android:layout_width="161dp"
        android:layout_height="89dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescription"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp">

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="137dp"
            android:layout_height="19dp"
            android:lineHeight="19.2sp"
            android:text="Review &amp; Ratings"
            android:textColor="#EEF2FB"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvRatingMid"
            android:layout_width="69dp"
            android:layout_height="58dp"
            android:layout_marginTop="12sp"
            android:lineHeight="57.6sp"
            android:text="4.9"
            android:textColor="#FFFFFF"
            android:textSize="48sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRating" />

        <View
            android:id="@+id/star2_1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="29dp"
            android:background="@drawable/star_rate"
            app:layout_constraintStart_toEndOf="@+id/tvRatingMid"
            app:layout_constraintTop_toBottomOf="@+id/tvRating" />

        <View
            android:id="@+id/star2_2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="29dp"
            android:background="@drawable/star_rate"
            app:layout_constraintStart_toEndOf="@+id/star2_1"
            app:layout_constraintTop_toBottomOf="@+id/tvRating" />

        <View
            android:id="@+id/star2_3"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="29dp"
            android:background="@drawable/star_rate"
            app:layout_constraintStart_toEndOf="@+id/star2_2"
            app:layout_constraintTop_toBottomOf="@+id/tvRating" />

        <View
            android:id="@+id/star2_4"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="29dp"
            android:background="@drawable/star_rate"
            app:layout_constraintStart_toEndOf="@+id/star2_3"
            app:layout_constraintTop_toBottomOf="@+id/tvRating" />

        <View
            android:id="@+id/star2_5"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="29dp"
            android:background="@drawable/star_rate"
            app:layout_constraintStart_toEndOf="@+id/star2_4"
            app:layout_constraintTop_toBottomOf="@+id/tvRating" />

        <TextView
            android:layout_width="76dp"
            android:layout_height="14dp"
            android:text="70M Reviews"
            android:gravity="center"
            android:textColor="#A8ADB7"
            android:textSize="12sp"
            android:lineHeight="14.4sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/tvRatingMid"
            app:layout_constraintTop_toBottomOf="@+id/star2_1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/clRating"
        app:layout_constraintBottom_toTopOf="@+id/btInstall">

    </View>
    
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvDescription"
        app:layout_constraintBottom_toTopOf="@id/btInstall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rvReview"
                android:overScrollMode="never"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:listitem="@layout/review_view_row" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btInstall"
        android:layout_width="327dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#F4D144"
        android:text="Install"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>